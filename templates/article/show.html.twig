    <h1>Article</h1>

    <table class="table">
        <tbody>
             <tr>
                 <th>Image</th>
                 <td><img src="{{ asset('uploads/article_photo/' ~ article.image) }}"></td>
             </tr>

            <tr>
                <th>Title</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Min</th>
